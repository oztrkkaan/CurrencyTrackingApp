    @if (TempData.ContainsKey("Toastr"))
    {
        ToastrOption toastrOption = JsonConvert.DeserializeObject<ToastrOption>(TempData["Toastr"].ToString());
        if (toastrOption != null)
        {
            <script>
            $(document).ready(function () {
              toastr.options.closeButton = '@toastrOption.ShowCloseButton';
                toastr.options.newestOnBottom = '@toastrOption.ShowNewestOnTop';
                toastr.options.positionClass = 'toast-top-right';
                toastr.options.progressBar= 'true';
              @foreach (ToastrMessage message in toastrOption.ToastrMessages)
              {
                  string toastTypeValue = message.ToastType.ToString().ToLower();
                @: var optionsOverride = { /* Add message specific options here */ };
                if (message.IsSticky)
                  {
                  @:optionsOverride.timeOut = 0;
                  @:optionsOverride.extendedTimeout = 0;
                }
                @:toastr['@toastTypeValue']('@message.Message', '@message.Title');
              }
            });
            </script>
        }
    }

